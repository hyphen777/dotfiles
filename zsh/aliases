# cd
alias ..='cd ..'

# ls
alias ls="ls -la"

# less
alias lg='less +G'

# git
alias g='git'

platform=`uname`
if [[ "$platform" == 'Darwin' ]]
then
  alias gg='gitx -c'
  alias gk='gitx --all'
else
  alias gg='git gui &'
  alias gk='gitk --all &'
fi
alias gp='git pull'
alias gpr='git pull --rebase'
alias gb='git branch --all'
alias gru='git remote update'
alias grm='git rebase origin/master'

# rails
alias b=bundle
alias r='rails'
alias rc='rails console'
alias rs='rails server'
alias rg='rails g'
alias rk=rake
alias s='rake spec'

# various
alias gv='gvim .'
alias v='mvim .'
alias c=clear
alias home='cd ~'
alias dev='cd ~/dev; rvm use 1.9.2; rvm gemset use dev'

# project related
# set $PROJECTS in .localrc
if [[ -n $PROJECTS ]]
then
  for project in $PROJECTS
  do
    if [[ -d ~/dev/$project ]]
    then
      # set up RVM
      rvm use 1.8.7 > /dev/null
      rvm gemset create $project > /dev/null
      if [[ ! -f ~/dev/$project/.rvmrc ]]
      then
        echo "rvm use 1.8.7@$project" > ~/dev/$project/.rvmrc
      fi
      # set up alias
      alias "$project"="cd ~/dev/$project"
    fi
  done
fi

function morning() {
  echo "Good Morning!"
  pushd .
  if [[ -n $PROJECTS ]]
  then
    for project in $PROJECTS
    do
      if [[ -d ~/dev/$project ]]
      then
        echo "Refreshing $project"
        cd ~/dev/$project
        git pull --rebase
      fi
    done
  fi
  popd
}

# linux
alias sagu='sudo apt-get update'
alias sagU='sudo apt-get upgrade'

