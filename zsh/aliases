# cd
alias ..='cd ..'

# ls
alias ls="ls -la"

# less
alias lg='less +G'

# git
alias g='git'
alias gg='git gui &'
alias gk='gitk --all &'
alias gp='git pull'
alias gb='git branch --all'

# rails
alias b=bundle
alias r='rails'
alias rc='rails console'
alias rs='rails server'
alias rg='rails g'
alias rk=rake
alias s='rake spec'

# various
alias gv='gvim .'
alias v='mvim .'
alias c=clear
alias home='cd ~'
alias dev='cd ~/dev; rvm use 1.9.2; rvm gemset use dev'

# linux
alias sagu='sudo apt-get update'
alias sagU='sudo apt-get upgrade'

