# cd
alias ..='cd ..'

# ls
alias ls="ls -la"

# less
alias lg='less +G'

# git
alias g='git'
alias gg='git gui &'
alias gk='gitk --all &'
alias gp='git pull'
alias gb='git branch --all'
alias gru='git remote update'
alias grm='git rebase origin/master'

# rails
alias b=bundle
alias r='rails'
alias rc='rails console'
alias rs='rails server'
alias rg='rails g'
alias rk=rake
alias s='rake spec'

# various
alias gv='gvim .'
alias v='mvim .'
alias c=clear
alias home='cd ~'
alias dev='cd ~/dev; rvm use 1.9.2; rvm gemset use dev'

# project related
# set $PROJECTS in .localrc
if [[ -n $PROJECTS ]]
then
  for project in $PROJECTS
  do
    if [[ -d ~/dev/$project ]]
    then
      # set up RVM
      rvm use 1.8.7 > /dev/null
      rvm gemset create $project > /dev/null
      # set up alias
      alias "$project"="cd ~/dev/$project; rvm use 1.8.7; rvm gemset use $project"
    fi
  done
fi

# linux
alias sagu='sudo apt-get update'
alias sagU='sudo apt-get upgrade'

