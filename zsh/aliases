# cd
alias ..='cd ..'

# ls
alias ls="ls -laG"

# less
alias lg='less +G'

# git
alias g='git'

platform=`uname`
if [[ "$platform" == 'Darwin' ]]
then
  alias gg='gitx -c'
  alias gk='gitx --all'
else
  alias gg='git gui &'
  alias gk='gitk --all &'
fi
alias gp='git pull'
alias gpr='git pull --rebase'
alias gb='git branch -a'
alias gru='git remote update'
alias grm='git rebase origin/master'

# rails
alias b=bundle
alias r='rails'
alias rc='rails console'
alias rs='rails server'
alias rg='rails g'
alias rk=rake
alias s='rake spec'

# various
alias gv='gvim .'
alias v='mvim .'
alias c=clear
alias h='cd ~'
alias o='open'

function p() {
  if [ $# -eq 1 ]
  then
    if [ -d ~/dev/$1 ]
    then
      cd ~/dev/$1
    else
      echo "Project folder does not exist"
      cd ~/dev/
    fi
  else
    cd ~/dev/
  fi
}

# screen
function scr() {
  screen -D -R -c ~/.screenrc-$1
}

# linux
alias sagu='sudo apt-get update'
alias sagU='sudo apt-get upgrade'

